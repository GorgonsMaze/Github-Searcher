<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@string/font_family_thin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.githubsearch.githubsearch.Profile"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:id="@+id/tvJSONResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="107dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="172dp"
        android:layout_height="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@string/font_family_medium"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="\@GorgonsMaze"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:text="Ian Arsenault"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textViewFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:layout_marginRight="118dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="118dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabChrome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:backgroundTint="@android:color/background_light"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@color/progressColor"
        app:srcCompat="@drawable/chromelogo"
        android:layout_marginEnd="16dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="143dp"
        android:layout_height="143dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageViewProfilePicture"
        android:layout_width="144dp"
        android:layout_height="142dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="29dp"
        android:layout_height="31dp"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintRight_toLeftOf="@+id/textViewLocation" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:text="Location"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="4dp" />

    <LinearLayout
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePicture">

        <TextView
            android:id="@+id/textViewFollowers"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:text="Followers"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="269dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
